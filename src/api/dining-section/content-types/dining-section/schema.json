{
  "kind": "collectionType",
  "collectionName": "dining_sections",
  "info": {
    "singularName": "dining-section",
    "pluralName": "dining-sections",
    "displayName": "Dining Section",
    "description": "Alternating image + text sections on the Dining page (Restaurant, Poolside, Candle Light, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description1": {
      "type": "text",
      "required": true
    },
    "description2": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "imagePosition": {
      "type": "enumeration",
      "enum": ["left", "right"],
      "default": "right",
      "required": true
    },
    "checklistItems": {
      "type": "json",
      "required": false
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
